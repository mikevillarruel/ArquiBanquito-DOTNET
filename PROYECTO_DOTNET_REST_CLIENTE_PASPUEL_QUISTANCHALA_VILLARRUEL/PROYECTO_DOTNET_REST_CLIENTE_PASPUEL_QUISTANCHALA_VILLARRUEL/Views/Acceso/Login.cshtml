@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            margin: 0;
            padding: 0;
            background-image: url('https://small-bizsense.com/wp-content/uploads/2020/06/bigstock-Contactless-Payment-Concept-N-322253395.jpg');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
        }

        div {
            margin: 0;
            padding: 0;
        }

        label {
            color: white;
        }

        label, input {
            width: 300px;
        }

        aside {
            width: 375px;
            padding-left: 50px;
            padding-right: 50px;
            padding-top: 10vh;
            float: right;
            height: 100vh;
            background-color: #1F618D;
        }

        a, h4 {
            width: 280px;
        }

        h1 {
            text-align: center;
            color: white;
            font-weight: 800;
        }

        img {
            width:300px;
        }

    </style>
</head>
<body>
    <div>
        <aside>
            <h1>BanQuito</h1>
            <img src="http://assets.stickpng.com/images/58a7a1e35ad0fd0b7fdd33c8.png" alt="Monster" />
            <h4 class="alert-danger">@ViewBag.Message</h4>
            <form action="@Url.Content("~/Acceso/Login")" method="post">
                <div class="form-group">
                    <label>Usuario *</label>
                    <br />
                    <input type="text" name="nombreUsuario" autocomplete="off"/>
                </div>
                <div class="form-group">
                    <label>Contraseña *</label>
                    <br />
                    <input type="password" name="contrasenia" autocomplete="off"/>
                </div>
                <div class="form-group">
                    <input type="submit" value="Entrar" class="btn btn-success" />
                </div>
            </form>
            <a class="btn btn-primary" href="~/Acceso/RegistrarUsuario">Registrarse</a>
        </aside>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>

